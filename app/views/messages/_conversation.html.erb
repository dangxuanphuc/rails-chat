<div class="panel panel-default" id="messages" data-user-id="<%= user.id %>">
  <div class="panel-heading" id="user-name">
    <%= link_to user.name, "", user: user %>
    <% if user.online %>
      <%= image_tag "online.png", id: "#{user.id}-status", title: "Online" %>
    <% end %>
  </div>

  <div class="panel-body">
    <div id="messages-list">
      <ul>
        <%= render "messages/conversation_content", messages: messages, user: user %>
      </ul>
    </div>

    <form class="new_message">
      <input name="user_id" type="hidden" value="<%= user.id %>">
      <textarea name="body" class="form-control text-area"></textarea>
    </form>
  </div>
</div>
