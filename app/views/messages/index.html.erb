<div class="row">
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
            <div class="user-info">
              <%= gravatar_for user %>
              <li>
                <%= link_to user.name, "#", id: "user-id-#{user.id}", class: "current-user-#{current_user.id}" %>
                <span id="user-online">
                  <% if user.online %>
                    <%= image_tag "online.png", id: "user-#{user.id}-status", class: "active", title: "Online" %>
                  <% else %>
                    <%= image_tag "online.png", id: "user-#{user.id}-status", class: "inactive" %>
                  <% end %>
                </span>
              </li>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <div id="conversation"></div>
  </div>
</div>
